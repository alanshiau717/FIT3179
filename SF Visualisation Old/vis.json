{
    "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
    "width": 800,
    "height": 500,
    "title": "Crime In San Francisco",
    "projection": {"type": "albersUsa"},
    "data": {
          "url": "https://raw.githubusercontent.com/alanshiau717/FIT3179/main/SF%20Visualisation%20Old/sf_planning_neighborhoods.json",
          "format": {"type": "topojson", "feature": "sf_planning_neighborhoods"}
        }
        ,"transform": [
          {
        "lookup": "properties.neighborho",
            "from": {
              "data": {
                "url": "https://raw.githubusercontent.com/alanshiau717/FIT3179/main/SF%20Visualisation%20Old/count_final.csv"
              },
              "key": "neighborho",
              "fields": ["NUMPOINTS", "population"]
            }
          }
          ,
          {"calculate": "round(datum.NUMPOINTS/datum.population * 100000)", "as": "Crime Rate Per 100,000"}
        ],
      "mark": {"type": "geoshape", "stroke": "black"},
      "encoding": {
        "color": {
          "field": "population",
          "type": "quantitative",
          "scale": {"type": "log", "scheme": "reds"}
        },
          "tooltip": [
            {"field": "properties.neighborhood", "type": "nominal", "title": "State"},
            {"field": "population", "type" : "quantitative"},
            {"field": "Crime Rate Per 100,000", "type": "quantitative"}
      ]
  
      }
  
    
      
  
  }