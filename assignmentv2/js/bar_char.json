{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "data": {"url": "https://raw.githubusercontent.com/alanshiau717/FIT3179/main/SF%20Visulisation/Police_Department_Incidents_-_Previous_Year__2016_.csv"},
  "width": "container",
  "height": "container",
  "title": "Top Crimes",
  "transform": [
    {"filter" : "District_Select == null|| datum.PdDistrict == District_Select"},
    {
      "aggregate": [{"op": "count", "as": "Frequency"}],
      "groupby": ["Category"]
    },
    {
      "window": [{
        "op": "rank",
        "as": "rank"
      }],
      "sort": [{ "field": "Frequency", "order": "descending" }]
    }, 
    {
      "filter": "datum.rank <= 10"
    }
  ],
  "encoding": {
    "y": {"field": "Category", "type": "ordinal", "sort":"-x"},
    "x": {"field": "Frequency", "type": "quantitative"},
     "tooltip": [
        {"field" : "Frequency", "type": "quantitative"},
        {"field": "Category", "type": "ordinal"}
      ],
    "color": {"value": "red"}
  },
   "params" : [
    {
      "name": "District_Select",
      "bind": {
        "input": "select",
        "options": [
          null,
          "SOUTHERN",
        "NORTHERN",
        "MISSION",
        "CENTRAL",
        "BAYVIEW",
        "PARK",
        "NORTHERN",
        "MISSION",
        "INGLESIDE",
        "CENTRAL",
        "BAYVIEW"
      ],
      "labels": [
        "Show All",
        "SOUTHERN",
        "NORTHERN",
        "MISSION",
        "CENTRAL",
        "BAYVIEW",
        "PARK",
        "NORTHERN",
        "MISSION",
        "INGLESIDE",
        "CENTRAL",
        "BAYVIEW"
      ],
      "name": "District Selection"
    }}
  ],
  "layer": [
    {
      "mark": "bar",
      "encoding": {
     }
    },
    {
      "mark": {
      "type":"text",
      "align": "left",
      "baseline": "middle",
      "xOffset": -150,
      "dy": 25,
      "fontSize": 11,
      "text": 
      ["In all districts"
      ,"the most common"
      ,"crime is LARCENY/THEFT"]
    },
    "encoding": {
      "color": {"value": "black"},
      "opacity": {
        "condition":{
          "test": "datum['Category'] == 'LARCENY/THEFT'", 
          "value" : 1 
          }, 
          "value": 0
      }
      }
    },
    {"mark": {
      "type" : "text",
      "align": "right",
      "xOffset": -4,
      "fontWeight": "bold"        
    },
    "encoding": {
      "color": {"value": "white"},
      "text": {
        "field": "Frequency",
        "type": "quantitative"},
              "opacity": {
        "condition":{
          "test": "datum['Category'] == 'LARCENY/THEFT'", 
          "value" : 1 
          }, 
          "value": 0
      }
    }
    }
  ]
}